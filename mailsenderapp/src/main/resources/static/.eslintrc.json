{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": ["airbnb", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "no-use-before-define": [
            "error",
            { "functions": false, "classes": false }
        ]
    }
}
