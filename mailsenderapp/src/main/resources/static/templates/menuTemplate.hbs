<ul>
    {{#each menu}}
    <li {{#if blankspace}} class="blank-space" {{else}} id="{{menuId}}" {{/if}}>
        {{#switch is}}
        {{#case "menu-link"}}
        <a class="menu-link" data-href="{{hyperlink}}">{{menuLinkName}}</a>
        {{#if dropdown}}
        <ul class="dropdown">
            {{#each dropdownLinks}}
            <li><a class="dropdown-menu-link" id="{{dropdownLinkId}}"
                    data-href="{{dropdownUrl}}">{{dropdownName}}</a>
            </li>
            {{/each}}
        </ul>
        {{/if}}
        {{/case}}

        {{#case "header-space"}}
        <a class="main-site-link">
            <h1 id="main-header" header-content="MailSender"></h1>
        </a>
        {{/case}}
    </li>
    {{/switch}}
    {{/each}}
</ul>